<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/router"
    app:startDestination="@id/nav_login"
    app:defaultNavHost="true">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.bif.app.feature.auth.LoginFragment"
        android:label="Login"
        app:route="/login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/nav_register"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_register"
        android:name="com.bif.app.feature.auth.RegisterFragment"
        android:label="Register"
        app:route="/register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/nav_login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.bif.app.ui.home.HomeFragment"
        android:label="Home"
        app:route="/home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_map"
            app:destination="@id/nav_map"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_home_to_location"
            app:destination="@id/nav_location"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_home_to_social"
            app:destination="@id/nav_social"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_home_to_profile"
            app:destination="@id/nav_profile"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
            
        <action 
            android:id="@+id/action_home_to_favorites"
            app:destination="@id/nav_favorites"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_map"
        android:name="com.bif.app.feature.map.MapFragment"
        android:label="Map"
        app:route="/map"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_map_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <argument
            android:name="location"
            app:argType="string"
            app:nullable="true" />
    </fragment>


    <fragment
        android:id="@+id/nav_location"
        android:name="com.bif.app.ui.location.LocationFragment"
        android:label="Location"
        app:route="/location"
        tools:layout="@layout/fragment_location">

        <action
            android:id="@+id/action_location_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_social"
        android:name="com.bif.app.feature.social.SocialFragment"
        android:label="Social"
        app:route="/social"
        tools:layout="@layout/fragment_social">

        <action
            android:id="@+id/action_social_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_social_to_profile"
            app:destination="@id/nav_profile"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.bif.app.feature.profile.ProfileFragment"
        android:label="Profile"
        app:route="/profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profile_to_login"
            app:destination="@id/nav_login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorites"
        android:name="com.bif.app.feature.favorites.FavoritesFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites"
        app:route="/favorites">

        <action
            android:id="@+id/action_favorites_to_detail"
            app:destination="@id/nav_favorite_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>

        <action
            android:id="@+id/action_favorites_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/nav_favorite_detail"
        android:name="com.bif.app.feature.favorites.FavoriteDetailFragment"
        android:label="Details"
        tools:layout="@layout/fragment_favorite_detail">

        <argument android:name="favId" app:argType="integer" android:defaultValue="0" />
        <argument android:name="favName" app:argType="string" android:defaultValue="" />
        <argument android:name="favAddress" app:argType="string" android:defaultValue="" />
        <argument android:name="favDescription" app:argType="string" android:defaultValue="" />
        <argument android:name="favNotes" app:argType="string" android:defaultValue="" />
        <argument android:name="favRating" app:argType="integer" android:defaultValue="0" />
    </fragment>
</navigation>