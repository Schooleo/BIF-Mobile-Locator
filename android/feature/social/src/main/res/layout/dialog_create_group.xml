<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:backgroundTint="?attr/colorScreenBackground"
    android:padding="24dp">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_group"
            android:textColor="?attr/colorTextPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/close"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <!-- Content - Search Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_search_input"
        android:backgroundTint="?attr/colorListItemBackground"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/search_by_name_or_id"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search_by_name_or_id"
            android:textColor="?attr/colorTextPrimary"
            android:textColorHint="?attr/colorTextSecondary"
            android:textSize="16sp"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- Footer - Button -->
    <Button
        android:id="@+id/btn_create_group"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/create_new_group"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_dialog_button"
        android:stateListAnimator="@null" />

</LinearLayout>
