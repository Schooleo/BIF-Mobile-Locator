<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorScreenBackground"
    android:gravity="center_horizontal"
    android:padding="32dp">

    <!-- Logo -->
    <include layout="@layout/component_logo" />

    <!-- Email Input -->
    <include layout="@layout/component_input_email" />

    <!-- Password Input -->
    <include layout="@layout/component_input_password" />

    <!-- Confirm Password Input -->
    <include layout="@layout/component_input_confirm_password" />

    <!-- Sign up Button -->
    <include
        android:id="@+id/btn_signup"
        layout="@layout/component_primary_button"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

    <!-- Sign in Link -->
    <include
        android:id="@+id/tv_signin_link"
        layout="@layout/component_auth_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
