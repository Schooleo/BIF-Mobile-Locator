<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/at_home"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:lineSpacingExtra="8dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="30dp"
            android:padding="15dp"
            android:hint="@string/location_hint"
            android:inputType="text"
            android:textStyle="bold"
            android:gravity="center"
            android:importantForAutofill="no" />

        <ImageButton
            android:id="@+id/btn_search_map"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/ic_map"
            android:contentDescription="@string/goto_map_button" />

    </LinearLayout>

    <!-- Bottom Navigation Bar vá»›i 4 buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btn_nav_map"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="@string/map"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_nav_loc"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="@string/location"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_nav_fav"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="@string/favorites"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_nav_social"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="@string/social"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_nav_profile"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="@string/my_profile"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>