<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BIFLocator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Background -->
        <item name="colorScreenBackground">@color/dark_mode_background</item>

        <!-- Main brand color -->
        <item name="colorPrimary">@color/button_color</item>

        <!-- Text on background -->
        <item name="colorOnBackground">@color/white</item>

        <!-- Surface (card / box UI) -->
        <item name="colorSurfaceBox">@color/dark_mode_box</item>

        <!-- Text on surface -->
        <item name="colorInputText">@color/white</item>

        <!-- Semantic color aliases -->
        <item name="colorHintText">@color/hint_text_color</item>
        <item name="colorAuthLink">@color/dark_mode_auth_link_color</item>

    </style>
</resources>