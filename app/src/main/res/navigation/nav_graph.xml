<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/router"
    app:startDestination="@id/nav_login"
    app:defaultNavHost="true">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.bif.locator.ui.auth.LoginFragment"
        android:label="Login"
        app:route="/login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_login_to_register"
            app:destination="@id/nav_register"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_login_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@id/nav_login"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/nav_register"
        android:name="com.bif.locator.ui.auth.RegisterFragment"
        android:label="Register"
        app:route="/register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/nav_login"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.bif.locator.ui.home.HomeFragment"
        android:label="Home"
        app:route="/home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_home_to_map"
            app:destination="@id/nav_map"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_home_to_location"
            app:destination="@id/nav_location"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_home_to_social"
            app:destination="@id/nav_social"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/nav_map"
        android:name="com.bif.locator.ui.map.MapFragment"
        android:label="Map"
        app:route="/map"
        tools:layout="@layout/fragment_map">

        <action
            android:id="@+id/action_map_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <argument
            android:name="location"
            app:argType="string"
            app:nullable="true" />

    </fragment>


    <fragment
        android:id="@+id/nav_location"
        android:name="com.bif.locator.ui.location.LocationFragment"
        android:label="Location"
        app:route="/location"
        tools:layout="@layout/fragment_location">

        <action
            android:id="@+id/action_location_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/nav_social"
        android:name="com.bif.locator.ui.social.SocialFragment"
        android:label="Social"
        app:route="/social"
        tools:layout="@layout/fragment_social">

        <action
            android:id="@+id/action_social_to_home"
            app:destination="@id/nav_home"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

</navigation>